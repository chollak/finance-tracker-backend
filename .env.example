# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Choose: 'sqlite' or 'supabase'
DATABASE_TYPE=sqlite

# Supabase Configuration (required when DATABASE_TYPE=supabase)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key
OPENAI_ORG_ID=your-org-id
OPENAI_MODEL=gpt-4-turbo
WHISPER_MODEL=whisper-1
DEFAULT_LANGUAGE=ru

# Telegram Bot
TG_BOT_API_KEY=your_telegram_bot_key
WEB_APP_URL=https://sapaev.uz
NGROK_URL=https://your-ngrok-url.ngrok.io

# Legacy Notion Configuration (deprecated, use Supabase instead)
NOTION_API_KEY=your_notion_key
NOTION_DATABASE_ID=your_notion_database_id

# Development Settings
ENABLE_TELEGRAM_POLLING=true
WEBHOOK_MODE=false
DB_SYNCHRONIZE=true
DOWNLOADS_PATH=./downloads

# Logging Configuration
# Levels: error, warn, info, debug
LOG_LEVEL=info
